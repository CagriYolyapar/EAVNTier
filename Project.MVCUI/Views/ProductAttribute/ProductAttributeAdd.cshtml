@model PAVM
@{
    ViewBag.Title = "ProductAttributeAdd";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Product.ID)

    <h1>Ürün Özelligi Ekleme Sayfa</h1>

    <div class="panel panel-body">
        <div class="panel panel-primary">

            @foreach (EntityAttribute item in Model.EntityAttributes)
            {
                <!--Burada HTML helper kullanmamaya dikkat edin yoksa render edilirken iki tane tag cıkartır-->

                <input type="checkbox" value="@item.ID" name="checkbox" /> @item.Title
            }

            <div>
                <button class="btn btn-primary">Ekle</button>
            </div>



        </div>
    </div>


}
